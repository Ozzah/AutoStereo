<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>Oliver Czibula</Authors>
    <Product>AutoStereo</Product>
    <Description>A tool to convert a 2D image and a depth map into an autostereogram</Description>
    <RepositoryUrl>https://github.com/Ozzah/AutoStereo</RepositoryUrl>
  </PropertyGroup>
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <OutputPath>..\..\bin\</OutputPath>
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Ozzah.AutoStereo</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="ShellProgressBar" Version="5.2.0" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.0.0" />
  </ItemGroup>

</Project>
